{
    "version": 4,
    "configurations": [
        {
            "name": "Mac",
            "cStandard": "c89",
            "intelliSenseMode": "macos-clang-arm64",
            "compilerPath": "/usr/bin/clang",
            "compilerArgs": [
                "-Wall",
                "-Werror",
                "-Wextra"
            ],
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/libft/include"
            ]
        },
        {
            "name": "Linux",
            "cStandard": "c89",
            "intelliSenseMode": "linux-clang-x64",
            "compilerPath": "clang",
            "compilerArgs": [
                "-Wall",
                "-Werror",
                "-Wextra"
            ],
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/libft/include"
            ]
        }
    ]
}
